<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/corDeFundo"
    tools:context=".CartilhaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CARTILHA DE SEGURANÇA DA INFORMAÇÃO"
            android:textAlignment="center"
            android:textColor="@color/corTitulos"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/texto1pag1"
            android:textSize="18dp"
            android:textColor="@color/corTextos"
            android:justificationMode="inter_word" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/imgcartilha" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/texto1pag1_pt2"
            android:textSize="18dp"
            android:textColor="@color/corTextos"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/buttonAnterior"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/brancoPersonalizado"
                android:text=""
                android:textColor="@color/corTitulos"
                android:textSize="20dp"
                android:background="@drawable/prev"
                android:textStyle="bold"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/btnLer"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/brancoPersonalizado"
                android:text=""
                android:textColor="@color/corTitulos"
                android:background="@drawable/imgleitura"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/buttonProxPagina"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/brancoPersonalizado"
                android:text=""
                android:textColor="@color/corTitulos"
                android:textSize="20dp"
                android:background="@drawable/next"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>