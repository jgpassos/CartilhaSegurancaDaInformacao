<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeisEDireitosActivity4pt2"
    android:orientation="vertical"
    android:background="@color/corDeFundo" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="LEIS E DIREITOS DO IDOSO"
        android:textAlignment="center"
        android:textColor="@color/corTitulos"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/texto4pagLeisEDireitospt2"
        android:justificationMode="inter_word"
        android:textColor="@color/corTextos"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/texto4pagLeisEDireitospt3"
        android:justificationMode="inter_word"
        android:textColor="@color/corTextos"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/imgpessoas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp" >

        <Button
            android:id="@+id/btn_anterior"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brancoPersonalizado"
            android:text=""
            android:textColor="@color/corTitulos"
            android:background="@drawable/prev"
            android:textStyle="bold"  />

        <Button
            android:id="@+id/btnLer"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brancoPersonalizado"
            android:text=""
            android:textColor="@color/corTitulos"
            android:background="@drawable/imgleitura"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brancoPersonalizado"
            android:text=""
            android:textColor="@color/corTitulos"
            android:background="@drawable/home"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonProxPagina9pt2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brancoPersonalizado"
            android:text=""
            android:textColor="@color/corTitulos"
            android:background="@drawable/next"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>